<PongBall> :
	size : 15,15
	canvas :
		Ellipse:
			pos: self.pos
			size: self.size

<PongPaddle>:
	size : 15,150
	canvas :
		Rectangle :
			pos : self.pos
			size: self.size

<PongGame>:
	ball: pong_ball
	left_player : left_paddle
	right_player : right_paddle
	canvas :
		Rectangle :
			pos : self.center_x - 3, 0
			size : 6, self.height

	Label:
		font_size : 20
		center_x : root.width / 4
		top : root.top - 50
		text: str(root.left_player.score)

	Label:
		font_size : 20
		center_x : root.width * 3 / 4
		top : root.top - 50
		text: str(root.right_player.score)

	PongBall:
		id: pong_ball
		center: self.parent.center

	PongPaddle:
		id : left_paddle
		x : root.x
		center_y : root.center_y

	PongPaddle:
		id : right_paddle
		x : root.width - self.width
		center_y : root.center_y